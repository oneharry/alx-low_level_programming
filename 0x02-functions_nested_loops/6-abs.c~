
#include <stdio.h>
/**
 * _abs: - Computes the absolute value of an integer argument
 * @int: The integer argument to be computed
* Return: Always the computed value of the int
 */
int _abs(int)
{
	if (n > 0)
	{
		return (n);
	} else if (n < 0)
	{
		return (n * -1);
	} else if (n == 0)
	{
		return (0);
	}
}

